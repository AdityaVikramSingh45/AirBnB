<% layout('/layouts/boilerplate') %>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="login-container">
        <h1 class="text-center mb-4">Log in</h1>
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control input-field" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control input-field" required>
            </div>
            <button class="btn btn-primary w-100 login-btn">Continue</button>
        </form>
        <div class="text-center mt-3">
            <span>Don't have an account? <a href="/signup" class="link-primary">Sign up</a></span>
        </div>
    </div>
</div>

<style>
    /* üåü Airbnb-Inspired Login Styling üåü */

    /* Main container for login form */
    .login-container {
        width: 500px; /* Increased width */
        padding: 40px;
        border-radius: 14px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        background-color: white;
        text-align: left;
        transition: all 0.3s ease-in-out;
    }

    /* Input fields styling */
    .input-field {
        border-radius: 10px;
        padding: 12px;
        font-size: 18px;
        border: 1.5px solid #ccc;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    .input-field:focus {
        border-color: #ff385c;
        outline: none;
        box-shadow: 0 0 8px rgba(255, 56, 92, 0.4);
    }

    /* Login button */
    .login-btn {
        background-color: #ff385c;
        border-radius: 10px;
        font-weight: bold;
        padding: 14px;
        font-size: 18px;
        transition: background-color 0.3s;
    }

    .login-btn:hover {
        background-color: #e62e50;
    }

    /* üåç Responsive Design */
    @media (max-width: 768px) {
        .login-container {
            width: 90%; /* Adjust width for tablets and small screens */
            padding: 30px;
        }

        .input-field {
            font-size: 16px;
            padding: 10px;
        }

        .login-btn {
            padding: 12px;
            font-size: 16px;
        }
    }

    @media (max-width: 480px) {
        .login-container {
            width: 100%;
            border-radius: 0; /* Full width for smaller screens */
            box-shadow: none;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .login-container h1 {
            font-size: 24px;
        }

        .login-btn {
            font-size: 16px;
        }
    }
</style>
